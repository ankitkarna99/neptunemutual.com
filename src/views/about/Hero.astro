---
import Icon from "../../elements/Icon.astro";

const t = (x: string): string => x;
---

<div class="about us hero container">
  <div class="inner full width container">
    <div class="content">
      <h1>
        <span class="subheader">
          {t("DeFi Insurance Protocol Based on Parametric Insurance Model")}
        </span>
        <p class="header title">
          {t("Simplifying Decentralized Insurance")}
        </p>
      </h1>

      <p class="header content">
        {
          t(
            "Watch out our 5-minute video to learn more about how Neptune Mutual contributes to the decentralized insurance industry."
          )
        }
      </p>
    </div>
  </div>

  <div class="floating container">
    <div class="top"></div>
    <div class="bottom"></div>
    <button
      class="video container play button"
      data-video-id={"GeqjuV1u4UI"}
      title={t(
        "Check out our 5-minute video to learn more about Neptune Mutual's contributions to the decentralized insurance industry"
      )}
    >
      <img
        alt={t("Neptune Mutual Explainer Youtube Video Thumbnail")}
        src="/assets/images/hero/reduce-exposure.webp"
      />

      <div class="overlay">
        <Icon variant="play" size={"2xl"} />
      </div>
    </button>
  </div>
</div>
