---
import ArticleCard from "../../components/ArticleCard.astro";
import Pagination from "../../elements/Pagination.astro";

const t = (x: string): string => x;

interface Props {
  posts: Content[];
  totalPages?: number;
  currentPage?: number;
  tag?: Tag;
}

const { posts, totalPages, currentPage, tag } = Astro.props;
---

<div class="pressroom announcement full width container">
  <h2>{tag?.name || t("Press Room / Latest Announcements")}</h2>
  <div class="articles">
    {
      (posts || []).map((post) => {
        return <ArticleCard type="pressroom" post={post} />;
      })
    }
  </div>

  <Pagination
    type="pressroom"
    tag={tag}
    currentPage={currentPage}
    totalPages={totalPages}
  />
</div>
