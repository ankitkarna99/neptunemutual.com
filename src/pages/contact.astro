---
import BaseLayout from "../layouts/BaseLayout.astro";
import Contact from "../views/Contact.astro";
import Seo from "../components/Seo.astro";
import styles from "./contact.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Contact Us / Neptune Mutual"
    description="If you're interested in learning more about the Neptune Mutual ecosystem, do not hesitate to contact us."
    og={{
      image: "/assets/images/meta/og/contact.png",
      imageAlt: "Neptune Mutual Contact Open Graph Banner",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <Contact />
  <Fragment slot="footer">
    <script src="../scripts/contact/index.js"></script>
  </Fragment>
</BaseLayout>
