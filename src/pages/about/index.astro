---
import About from "../../views/About.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Seo from "../../components/Seo.astro";

import styles from "./index.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="About Us / Neptune Mutual"
    description="Know us inside and out. Check out our quick 5 minute video explainer, get to know our people, and view our roadmap here."
    og={{
      image: "/assets/images/meta/og/about.png",
      imageAlt: "About Neptune Mutual",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <About />

  <Fragment slot="footer">
    <script src="../../scripts/about/index.js"></script>
  </Fragment>
</BaseLayout>
