---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NumberToBytes32Converter from "../../views/NumberToBytes32Converter.astro";
import Seo from "../../components/Seo.astro";

import styles from "./number-to-bytes32-converter.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Online Number to Solidity Bytes32 Converter"
    description="Efficiently convert a number to solidity's bytes32 data type. Additionally, discover other useful web3 tools."
    og={{
      image: "/assets/images/meta/og/web3-number-to-bytes32.png",
      imageAlt: "Number to Bytes32 Converter",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <NumberToBytes32Converter />

  <Fragment slot="footer">
    <script src="../../scripts/react/index.js"></script>
  </Fragment>
</BaseLayout>
