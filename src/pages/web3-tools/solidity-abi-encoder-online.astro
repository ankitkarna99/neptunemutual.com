---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Seo from "../../components/Seo.astro";
import SolidityAbiEncoder from "../../views/SolidityAbiEncoder.astro";

import styles from "./solidity-abi-encoder-online.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Online Solidity ABI Encoder / Unverified Contract Explorer"
    description="Encode solidity smart contract constructor and function payloads. Interact with contracts directly on any blockchain without Etherscan verification."
    og={{
      image: "/assets/images/meta/og/web3-solidity-abi-encoder.png",
      imageAlt: "Solidity ABI Encoder",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <SolidityAbiEncoder />

  <Fragment slot="footer">
    <script src="../../scripts/react/index.js"></script>
  </Fragment>
</BaseLayout>
