---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Seo from "../../components/Seo.astro";
import Web3Tools from "../../views/Web3Tools.astro";

import styles from "./index.scss?inline";
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Web3 Tools / Neptune Mutual"
    description="Bytes32 to string conversion, solidity ABI encoder, Ethereum unit converter, and more free web3 tools."
    og={{
      image: "/assets/images/meta/og/web3-index.png",
      imageAlt: "Web3 Tools by Neptune Mutual",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  <Web3Tools />

  <Fragment slot="footer">
    <script src="../../scripts/react/index.js"></script>
  </Fragment>
</BaseLayout>
