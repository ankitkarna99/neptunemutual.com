---
interface Props {
  tabItems: TabItem[];
}

const { tabItems } = Astro.props;
---

<div class="tabs component container">
  {
    tabItems.map(({ text, href, active }) => (
      <a data-active={Boolean(active).toString()} class="tab item" href={href}>
        {text}
      </a>
    ))
  }
</div>
